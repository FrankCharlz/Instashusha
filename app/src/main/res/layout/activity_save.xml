<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SaveActivity"
    android:background="@color/white"
    android:id="@+id/container_layout_activity_save">

    <FrameLayout
        android:id="@+id/frame_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/loading"
            android:layout_gravity="center_horizontal|top" />

        <include layout="@layout/toolbar_universal_layout"/>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progress_dl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress.height"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/frame_layout_container"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_below="@id/progress_dl">

        <com.mj.instashusha.utils.DopeTextView
            style="@style/DopeButton"
            android:id="@+id/btn_download"
            android:text="@string/btn.download"
            android:layout_weight="0.33"
            android:textSize="@dimen/text.size.button"
            android:layout_margin="@dimen/margin.button"/>


        <com.mj.instashusha.utils.DopeTextView
            android:id="@+id/btn_share"
            style="@style/DopeButton"
            android:layout_weight="0.33"
            android:text="@string/btn.share"
            android:textSize="@dimen/text.size.button"
            android:layout_margin="@dimen/margin.button"
            />

        <com.mj.instashusha.utils.DopeTextView
            android:id="@+id/btn_repost"
            style="@style/DopeButton"
            android:text="@string/btn.repost"
            android:layout_weight="0.33"
            android:textSize="@dimen/text.size.button"
            android:layout_margin="@dimen/margin.button"
            />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_activity_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_save">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
